<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

   <changeSet id="add-intersections-table" author="system">
    <createTable tableName="intersections" schemaName="public">
      <column name="id" type="SERIAL" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="int_id" type="NUMERIC" />
      <column name="geom" type="GEOMETRY"/>
      <column name="name" type="TEXT"/>
      <column name="metadata" type="TEXT"/>
      <column name="intersection_type_id" type="NUMERIC"/>
      <column name="last_updated" type="DATE"/>
      <column name="ingest_id" type="TEXT"/>
    </createTable>

  <addForeignKeyConstraint 
      baseTableName="intersections" 
      baseColumnNames="intersection_type_id" 
      constraintName="fk_intersections_intersection_type_id"
      referencedTableName="intersection_type" 
      referencedColumnNames="id"
      onDelete="NO ACTION"/>f
  </changeSet>

    <createTable tableName="intersection_type" schemaName="public">
      <column name="id" type="SERIAL" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="name" type="TEXT"/>
    </createTable>
  </changeSet>

</databaseChangeLog>
