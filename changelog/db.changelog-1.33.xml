<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

   <changeSet id="add-sssi-table" author="system">
    <createTable tableName="sssi" schemaName="public">
      <column name="ensis_id" type="NUMERIC" />
      <column name="global_id" type="TEXT" />
      <column name="geom" type="GEOMETRY"/>
      <column name="sssi_name" type="TEXT"/>
      <column name="last_updated" type="DATE"/>
      <column name="ingest_id" type="TEXT"/>
    </createTable>
  </changeSet>

   <changeSet id="unique-sssi-id" author="system">
    <sql>CREATE UNIQUE INDEX IF NOT EXISTS idx_sssi_id ON sssi (ensis_id, global_id);</sql>
  </changeSet>

</databaseChangeLog>
