<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

  <changeSet id="add-application-results-table" author="system">
    <createTable tableName="application_results" schemaName="public">
      <column name="id" type="SERIAL" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="application_id" type="TEXT"/>
      <column name="sbi" type="TEXT"/>
      <column name="crn" type="TEXT"/>
      <column name="data" type="JSONB"/>
      <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
    </createTable>
  </changeSet>

  <changeSet id="add-application-results-index" author="system">
      <createIndex indexName="idx_application_results_sbi" tableName="application_results" schemaName="public">
        <column name="sbi"/>
      </createIndex>
      <createIndex indexName="idx_application_results_crn" tableName="application_results" schemaName="public">
        <column name="crn"/>
      </createIndex>
       <createIndex indexName="idx_application_results_application_id" tableName="application_results" schemaName="public">
        <column name="application_id"/>
      </createIndex>
  </changeSet>
</databaseChangeLog>