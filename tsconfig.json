{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "NodeNext",
    "noEmit": true,
    "paths": {
      "~/*": ["./*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true
  },
  "exclude": [
    ".cache",
    ".public",
    ".server",
    "coverage",
    "node_modules",
    "src/**/*.test.js",
    "src/db-tests/**",
    "vitest.*.config.js"
  ],
  "include": [
    "**/*.cjs",
    "**/*.js",
    ".*.cjs",
    ".*.js",
    ".eslintrc.*",
    ".prettierrc.*"
  ]
}
